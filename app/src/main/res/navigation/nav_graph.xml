<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.metproject.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_introSliderFragment"
            app:destination="@id/introSliderFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.metproject.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/introSliderFragment"
        android:name="com.example.metproject.IntroSliderFragment"
        android:label="fragment_intro_slider"
        tools:layout="@layout/fragment_intro_slider" >
        <action
            android:id="@+id/action_introSliderFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_introSliderFragment_to_termsofAgreementFragment"
            app:destination="@id/termsofAgreementFragment" />
        <action
            android:id="@+id/action_introSliderFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.metproject.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <dialog
        android:id="@+id/termsofAgreementFragment"
        android:name="com.example.metproject.TermsofAgreementFragment"
        android:label="fragment_termsof_agreement_list_dialog"
        tools:layout="@layout/fragment_termsof_agreement_dialog" >
        <action
            android:id="@+id/action_termsofAgreementFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_termsofAgreementFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </dialog>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.metproject.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
</navigation>