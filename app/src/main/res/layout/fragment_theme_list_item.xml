<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_fragment_list_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/background"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_theme" />

                <TextView
                    android:id="@+id/theme_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Мавзӯи 1"
                    android:textColor="#888888"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/expand_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_expand_arrow" />

            </LinearLayout>


            <TextView
                android:id="@+id/theme_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="10sp"
                android:layout_marginBottom="10dp"
                android:text="Санчиши арифметика томактаби дар тоҷикистон"
                android:textAlignment="inherit"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/theme_description_text_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="10sp"
                android:text="Санчиши арифметика томактаби дар тоҷикистон Санчиши арифметика томактаби дар тоҷикистон Санчиши арифметика томактаби дар тоҷикистон ffbdfbfbfbfbfbfb"
                android:textAlignment="inherit"
                android:textColor="#4F4F4F"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/btn_detail"
                android:text="Дидан"
                android:textAllCaps="false"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/blueButton"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>